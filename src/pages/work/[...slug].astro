---
import Layout from "@/layouts/Layout.astro";
import { getCollection, getEntry, render, type CollectionEntry } from "astro:content";

export async function getStaticPaths() {
    const posts = await getCollection("work");
    console.log(posts);
    return posts.map((post: { id: any }) => ({
        params: { slug: post.id },
        props: { post },
    }));
}
interface Props {
    post: CollectionEntry<"work">;
}
const { post } = Astro.props;
const entry = await getEntry("work", post.id);

if (!entry) {
    return new Response("Not Found", {
        status: 404,
        statusText: "Not Found",
    });
}
const { Content, headings } = await render(entry);
---

<Layout title={entry.data.company} description={`My ${entry.data.role} at ${entry.data.company}`}>
    <div class="flex justify-between items-center">
        <div>
            <h2>{entry.data.company}</h2>
            <h3>{entry.data.role}</h3>
        </div>

        <div>
            <h4>{entry.data.dateStart}</h4>
            <h4>{entry.data.dateEnd}</h4>
        </div>
    </div>
    <p class="mt-2">{entry.data.description}</p>
    <span>
        Tech Stack:
        <div class="flex gap-2 flex-wrap">
            {
                entry.data.tech
                    ?.split(",")
                    ?.map((tech) => (
                        <span
                         class="tag-btn p-1 text-sm mt-2 rounded-md bg-stone-300 dark:bg-neutral-900 border border-stone-400 dark:border-neutral-800"
                         >{tech}</span>
                    ))
            }
        </div>
    </span>
    <br />
    
    <Content />
</Layout>
