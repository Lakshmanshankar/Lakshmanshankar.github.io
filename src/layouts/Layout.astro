---
import Head from "@/components/scripts.astro";
import Header from "@/components/Header.astro";
import "../styles/global.css";
import "../styles/typography.css";
import Navbar from "@/components/ui/Navbar.astro";

import { SITE } from "@/consts";
import Footer from "@/components/ui/Footer.astro";
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <Head />
        <Header title={`${title} | ${SITE.NAME}`} description={description} />
        <style is:global>
            html {
                overflow-y: scroll;
            }
        </style>
    </head>
    <body>
        <section class="w-full h-[100svh] main-gradient">
            <Navbar />
            <main class="mx-auto max-w-[700px] px-10 py-5">
                <!-- SPACER -->
                <div class="h-4 mt-10"></div>
                <slot />
                <Footer />
            </main>
        </section>
    </body>
</html>
