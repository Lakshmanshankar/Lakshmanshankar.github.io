---
// Callout.astro
interface Props {
  type?: 'info' | 'note' | 'tip' | 'warning' | 'success' | 'error';
  title: string;
  class?: string;
}

const { type = 'info', title, class: className = '' } = Astro.props;

const configs: Record<string, any> = {
  info: {
    icon: 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
    lightClasses: 'bg-blue-50 text-blue-900',
    darkClasses: 'dark:bg-blue-950/30 dark:text-blue-100',
    iconLight: 'text-blue-600',
    iconDark: 'dark:text-blue-400'
  },
  note: {
    icon: 'M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z',
    lightClasses: 'bg-gray-50 text-gray-900',
    darkClasses: 'dark:bg-gray-900/30 dark:text-gray-100',
    iconLight: 'text-gray-600',
    iconDark: 'dark:text-gray-400'
  },
  tip: {
    icon: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z',
    lightClasses: 'bg-green-50 text-green-900',
    darkClasses: 'dark:bg-green-950/30 dark:text-green-100',
    iconLight: 'text-green-600',
    iconDark: 'dark:text-green-400'
  },
  warning: {
    icon: 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z',
    lightClasses: 'bg-amber-50 text-amber-900',
    darkClasses: 'dark:bg-amber-950/30 dark:text-amber-100',
    iconLight: 'text-amber-600',
    iconDark: 'dark:text-amber-400'
  },
  success: {
    icon: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z',
    lightClasses: 'bg-emerald-50 text-emerald-900',
    darkClasses: 'dark:bg-emerald-950/30 dark:text-emerald-100',
    iconLight: 'text-emerald-600',
    iconDark: 'dark:text-emerald-400'
  },
  error: {
    icon: 'M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z',
    lightClasses: 'bg-red-50 text-red-900',
    darkClasses: 'dark:bg-red-950/30 dark:text-red-100',
    iconLight: 'text-red-600',
    iconDark: 'dark:text-red-400'
  }
};

const config = configs[type] || configs.info;
---

<div class={`callout rounded-lg p-3 ${config.lightClasses} ${config.darkClasses} ${className}`}>
  <div class="flex gap-2.5">
    <svg 
      class={`flex-shrink-0 mt-0.5 ${config.iconLight} ${config.iconDark}`}
      width="18" 
      height="18" 
      viewBox="0 0 24 24" 
      fill="none" 
      stroke="currentColor" 
      stroke-width="2" 
      stroke-linecap="round" 
      stroke-linejoin="round"
    >
      <path d={config.icon}></path>
    </svg>
    <div class="flex-1">
      <div class="font-semibold mb-1 text-sm">{title}</div>
      <div class="text-sm opacity-90">
        <slot />
      </div>
    </div>
  </div>
</div>

<style>
  .callout {
    transition: all 0.2s ease;
  }
</style>
