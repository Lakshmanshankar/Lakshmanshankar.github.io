---
import type { CollectionEntry } from "astro:content";
import BlogPostCard from "./BlogPostCard.astro";

interface Props {
    year: string;
    posts: CollectionEntry<"blog">[];
}

const { year, posts } = Astro.props;
---

<>
    <ul
        class="list-none py-4 pb-10  my-0 flex flex-col gap-0 border-y border-stone-400 dark:border-neutral-800 transition-all px-4 md:px-10 full-width"
    >
        <span class="my-2"> {posts.length >= 1 ? year : null} </span>
        {posts.map((post) => <BlogPostCard post={post} year={year} />)}
    </ul>
    <span class="horizontal-line"> </span>
</>
